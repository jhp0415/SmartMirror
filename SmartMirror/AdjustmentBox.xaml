<UserControl x:Class="SmartMirror.AdjustmentBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartMirror"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="40">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" x:Name="upBUtton" MouseLeftButtonDown="upButtonEvent_LeftClickDown" Source="Image/Button/Up Arrow.png" Width="30px" Height="30px"/>
        <TextBlock Grid.Row="1" x:Name="contentLabel" MouseLeftButtonDown="displayClickEvent_LeftClickDown" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18">0</TextBlock>
        <Image Grid.Row="2" x:Name="downButton" MouseLeftButtonDown="downButtonEvent_LeftClickDown" Source="Image/Button/Down Arrow.png" Width="30px" Height="30px"/>
    </Grid>
</UserControl>